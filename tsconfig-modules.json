{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "es2020",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "allowJs": true,
        "target": "es6",
        "typeRoots" : ["./node_modules/@types", "./global.d.ts"],
    },
    "include": [
        "global.d.ts",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "dist"
    ]
}