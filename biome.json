{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/node_modules", "!**/dist", "!**/build", "!**/.next", "!**/coverage", "!**/out", "!**/coverage", "!*.min.js", "!*.min.css", "!**/*.css"]
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 180,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      },
      "performance": {
        "recommended": true,
        "noImgElement": "off",
        "noAccumulatingSpread": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noCommonJs": "error",
        "noEnum": "warn"
      },
      "complexity": {
        "noImportantStyles": "error",
        "noUselessTypeConstraint": "warn",
        "useLiteralKeys": "off"
      },
      "security": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true,
        "noReactSpecificProps": "off",
        "noArrayIndexKey": "warn",
        "noImplicitAnyLet": "warn",
        "noAssignInExpressions": "warn",
        "noDoubleEquals":"off"
      },
      "correctness": {
        "recommended": true,
        "noUnusedVariables": "warn",
        "useIsNan": "error",
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn",
        "noInvalidPositionAtImportRule":"info",
        "useHookAtTopLevel": "warn",
        "noInvalidUseBeforeDeclaration": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "asNeeded",
      "attributePosition": "auto",
      "lineEnding": "lf"
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "off",
        "useSortedKeys": "off",
        "useSortedProperties": "on"
      }
    }
  }
}
